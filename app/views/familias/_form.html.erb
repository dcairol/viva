    <%= f.label :telefonos %><br>
    <%= f.text_area :telefonos %>
  </div>
  <div class="field">
    <%= f.label :correo %><br>
    <%= f.text_field :correo %>
  </div>
  <div class="field">
    <%= f.label :direccion %><br>
    <%= f.text_area :direccion %>
  </div>
  <div class="field">
    <%= f.label :aval %><br>
    <%= f.text_field :aval %>
  </div>
